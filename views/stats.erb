<div id="services" name="stats">
  <div class="container">
    <div class="row">
      <h2 class="centered">Stats</h2>
      <hr>
      <div class="col-lg-8 col-lg-offset-2">
        <p class="large">
          Up to date as of <%= Time.now.strftime("%m/%d/%y %I:%M%p") %>
        </p>
      </div>
      <div class="col-lg-4 callout"> <i class="fa fa-comment-o fa-3x"></i>
        <h3><%= Retort.count.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></h3>
        <p>Retorts</p>
      </div>
      <div class="col-lg-4 callout"> <i class="fa fa-chain fa-3x"></i>
        <h3><%= Bigram.count.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></h3>
        <p>Ngrams</p>
      </div>
      <div class="col-lg-4 callout"> <i class="fa fa-copy fa-3x"></i>
        <h3><%= Bigram.count(:identifier, :medium).to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></h3>
        <p>Identities</p>
      </div>

      <div class="col-lg-4 callout"> <i class="fa fa-comment-o fa-3x"></i>
        <h3><%= Retort.count(:stimulus).to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></h3>
        <p>Unique Retort Stimuli</p>
      </div>
      <div class="col-lg-4 callout"> <i class="fa fa-chain fa-3x"></i>
        <h3><%= Bigram.count(:prior).to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></h3>
        <p>Bigram Antecedents</p>
      </div>
      <div class="col-lg-4 callout"> <i class="fa fa-chain fa-3x"></i>
        <h3><%= Bigram.count(:after).to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></h3>
        <p>Bigram Consequents</p>
      </div>

    </div>
  </div>
</div>

