<div id="portfolio">
  <div class="container">
    <div class="row">
      <h2 class="centered">Most-known identities</h2>
      <hr>
      <div class="centered">
	      <div class="col-lg-4 callout"> <i class="fa fa-copy fa-3x"></i>
	        <h3><%= @identifier = Bigram.where.not(identifier: "").where.not(identifier: nil).select(:identifier, :medium).group(:identifier, :medium).order('count(*) DESC').limit(1).pluck(:identifier, :medium).flatten.reject(&:nil?).join('@') %></h3>
	        <p>Identifier</p>
	      </div>
	      <div class="col-lg-4 callout"> <i class="fa fa-copy fa-3x"></i>
	        <h3><%= @medium = Bigram.where.not(medium: "").where.not(medium: nil).select(:medium).group(:medium).order('count(*) DESC').limit(1).pluck(:medium).first %></h3>
	        <p>Medium</p>
	      </div>
	      <div class="col-lg-4 callout"> <i class="fa fa-copy fa-3x"></i>
	        <h3><%= @channel = Bigram.where.not(channel: "").where.not(channel: nil).select(:medium, :channel).group(:medium, :channel).order('count(*) DESC').limit(1).pluck(:medium, :channel).flatten.reject(&:nil?).join('#') %></h3>
	        <p>Channel</p>
	      </div>

	      <div class="col-lg-4 callout"> <i class="fa fa-link fa-3x"></i>
	        <h3><%= Bigram.where(identifier: @identifier.split('@').first).count %></h3>
	        <p>Ngrams for <%= @identifier.split('@').first %></p>
	      </div>
	      <div class="col-lg-4 callout"> <i class="fa fa-link fa-3x"></i>
	        <h3><%= Bigram.where(medium: @medium).count %></h3>
	        <p>Ngrams for <%= @medium %></p>
	      </div>
	      <div class="col-lg-4 callout"> <i class="fa fa-link fa-3x"></i>
	        <h3><%= Bigram.where(channel: @channel.split('#').last).count %></h3>
	        <p>Ngrams for <%= @channel.split('#').last %></p>
	      </div>
      </div>
    </div>
  </div>
